<p id="notice"><%= notice %></p>

<h1>Monsters</h1>

<table>
  <thead>
    <tr>
      <th> name </th>
      <th> speed </th>
      <th> max_health </th>
      <th> strength </th>
      <th> dexterity </th>
      <th> stability </th>
      <th> intelligence </th>
      <th> wisdom </th>
      <th> charisma </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @monsters.each do |monster| %>
      <tr>
        <td><%= monster.name %></td>
        <td><%= monster.speed %></td>
        <td><%= monster.max_health %></td>
        <td><%= monster.strength %></td>
        <td><%= monster.dexterity %></td>
        <td><%= monster.stability %></td>
        <td><%= monster.intelligence %></td>
        <td><%= monster.wisdom %></td>
        <td><%= monster.charisma %></td>
        <td><%= link_to 'Show', monster %></td>
        <td><%= link_to 'Edit', edit_monster_path(monster) %></td>
        <td><%= link_to 'Destroy', monster, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Monster', new_creature_path(type: 'Monster') %>
